@model UpdatePost

@{ Layout = "~/Views/Shared/_LayoutDashboard.cshtml"; }

<<form method="post" asp-action="Edit">
    <div class="border">
        <div asp-validation-summary="ModelOnly" class="text-danger"></div>
        <div class="form-group row">
            <h2 class="text-info">Edit Blog</h2>
        </div>

        <div class="row">
            <div class="col-8">
                <div class="row form-group">
                    <div class="col-4">
                        <label asp-for="Title"></label>
                    </div>
                    <div class="col-8">
                        <input asp-for="Title" class="form-control" />
                        <span asp-validation-for="Title" class="text-danger"></span>
                    </div>
                </div>

                <div class="row form-group">
                    <div class="col-4">
                        <label asp-for="FullContent"></label>
                    </div>
                    <div class="col-8">
                        <input asp-for="FullContent" class="form-control" />
                        <span asp-validation-for="FullContent" class="text-danger"></span>
                    </div>
                </div>

                <div class="row form-group">
                    <div class="col-4">
                        <label asp-for="Published"></label>
                    </div>
                    <div class="col-8">
                        <textarea asp-for="Published" class="form-control"></textarea>
                        <span asp-validation-for="Published" class="text-danger"></span>
                    </div>
                </div>

                <div class="row form-group">
                    <div class="col-4">
                        <label asp-for="Image"></label>
                    </div>
                    <div class="col-8">
                        <textarea asp-for="Image" class="form-control"></textarea>
                        <span asp-validation-for="Image" class="text-danger"></span>
                    </div>

                </div>

                <div class="row form-group">
                    <div class="col-4">
                        <label asp-for="PostId"></label>
                    </div>
                    <div class="col-8">
                        <textarea asp-for="PostId" class="form-control"></textarea>
                        <span asp-validation-for="PostId" class="text-danger"></span>
                    </div>
                </div>


                <div class="row form-group">
                    <div class="col">
                        <input type="submit" value="Update" class="btn btn-info" />
                    </div>
                    <div class="col">
                        <a asp-action="Index" class="btn btn-success">Back</a>
                    </div>
                </div>

            </div>
        </div>
    </div>

</form>