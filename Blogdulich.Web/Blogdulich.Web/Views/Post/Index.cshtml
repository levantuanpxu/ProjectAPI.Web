@model List<Post>
@{
    Layout = "~/Views/Shared/_LayoutDashboard.cshtml";
}
<div>
    <div class="row pt-4">
        <div class="col-6">
            <h2 class="text-primary">Blog List</h2>
        </div>

        <div class="col-6">
            <a asp-controller="Post" asp-action="Create" class="btn btn-primary">
                Create New Post
            </a>
        </div>
    </div>

    @if (Model.Count() > 0)
    {
        <table class="table table-bordered table-striped" style="width:100%">
            <thead>
                <tr>
                    <th>
                        Title 
                    </th>
                    <th>
                       Image
                    </th>
                    <th>
                        Published
                    </th>
                    
                   
                   @* <th>
                        Category Name
                    </th>*@
                    <th>

                    </th>
                </tr>
            </thead>
            <tbody>
                @foreach (var item in Model)
                {
                <tr>
                    <td width="20%">
                        @item.Title
                    </td>                                   
                    <td width="30%">
                        <img class="img-responsive fit-image" style="width:150px;text-align:center" src="@item.Image" alt="Alternate Text" />
                    </td>
                    <td width="10%">
                        @item.Published
                    </td>
                    @*  <td width="10%">
            @blog.Category.CategoryName
        </td>*@
                    <td width="20%">
                        <div>
                            <a asp-controller="Post" asp-action="Edit" asp-route-Id="@item.PostId" class="btn btn-primary">Edit</a>
                            <a asp-controller="Post" asp-action="Delete" asp-route-Id="@item.PostId" class="btn btn-danger">Delete</a>
                        </div>
                    </td>

                </tr>

                }
            </tbody>
        </table>


    }
    else
    {
        <p>Không tồn tại thể loại trong database</p>
    }


</div>